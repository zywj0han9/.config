[global]
    ### Display ###
    
    # Monitor to display notifications on
    monitor = 0
    
    # Display notifications on focused monitor
    follow = mouse
    
    ### Geometry ###
    
    # Width and height of notification
    width = (300, 500)
    height = (0, 400)
    
    # Position of notifications
    origin = top-right
    offset = (20, 60)
    
    # Scale factor (auto/integer)
    scale = 0
    
    # Maximum number of notification
    notification_limit = 5
    
    ### Progress bar ###
    
    progress_bar = true
    progress_bar_height = 14
    progress_bar_frame_width = 2
    progress_bar_min_width = 200
    progress_bar_max_width = 400
    
    ### Border ###
    
    frame_width = 3
    frame_color = "#89b4fa"
    separator_color = frame
    
    ### Text ###
    
    font = JetBrains Mono 14
    line_height = 3
    markup = full
    
    # Format of message - different for each urgency
    format = "<b>%s</b>\n%b"
    
    # Padding
    padding = 12
    horizontal_padding = 16
    
    # Alignment of message text
    alignment = left
    vertical_alignment = center
    
    # Show age of message if older than show_age_threshold
    show_age_threshold = 60
    
    # Ellipsize long lines
    ellipsize = middle
    
    # Ignore newlines in notifications
    ignore_newline = no
    
    # Stack together notifications with same content
    stack_duplicates = true
    hide_duplicate_count = false
    
    # Display indicators for URLs and actions
    show_indicators = yes
    
    ### Icons ###
    
    icon_position = left
    min_icon_size = 48
    max_icon_size = 80
    icon_corner_radius = 8
    
    # Icon path
    icon_path = /usr/share/icons/Papirus-Dark/16x16/status/:/usr/share/icons/Papirus-Dark/16x16/devices/:/usr/share/icons/Papirus-Dark/16x16/apps/
    
    ### History ###
    
    # Should a notification popped up from history be sticky
    sticky_history = yes
    
    # Maximum amount of notifications kept in history
    history_length = 20
    
    ### Misc/Advanced ###
    
    # dmenu path
    dmenu = /usr/bin/dmenu -p dunst:
    
    # Browser for opening urls in context menu
    browser = /usr/bin/xdg-open
    
    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true
    
    # Define title of windows spawned by dunst
    title = Dunst
    
    # Define class of windows spawned by dunst
    class = Dunst
    
    # Corner radius for the notification window
    corner_radius = 16
    
    # Separator height
    separator_height = 3
    
    # Gap between notifications
    gap_size = 8
    
    # Ignore dbus closeNotification message
    ignore_dbusclose = false
    
    ### Mouse ###
    
    # Left click
    mouse_left_click = close_current
    
    # Middle click
    mouse_middle_click = do_action, close_current
    
    # Right click
    mouse_right_click = close_all

### Urgency Levels ###

[urgency_low]
    background = "#11111b"
    foreground = "#a6adc8"
    frame_color = "#6c7086"
    highlight = "#89b4fa"
    timeout = 8
    format = "<b>üí¨ %s</b>\n%b"

[urgency_normal]
    background = "#181825"
    foreground = "#cdd6f4"
    frame_color = "#89b4fa"
    highlight = "#89b4fa"
    timeout = 10
    format = "<b>üì¢ %s</b>\n%b"

[urgency_critical]
    background = "#f38ba8"
    foreground = "#11111b"
    frame_color = "#ffffff"
    highlight = "#ffffff"
    timeout = 0
    format = "<b>üö® CRITICAL: %s</b>\n%b"

