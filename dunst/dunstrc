# Disable notification sound for specific apps
[telegram-desktop]
    desktop_entry = "org.telegram.desktop"

# Group notifications from same app
[group_same_app]
    appname = "*"
    format = "<b>%s (%n)</b>\n%b"

# Filter out low priority notifications during focus time
[work_mode_filter]
    summary = "*update*"
    summary = "*upgrade*"  
    skip_display = true
